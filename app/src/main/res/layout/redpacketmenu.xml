<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/autoSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自动抢红包" />

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/manualSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="手动抢红包（长按菜单）" />

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/aggressiveSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="⚡ 激进模式（极限性能换速度）" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="激进模式：跳过检查、并行抢包、禁用无关服务"
        android:textColor="?attr/colorOutline"
        android:textSize="12sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/whitelistGroupButton"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="白名单群组设置" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="平均金额过滤（分）">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/averageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/averageSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启用平均金额过滤" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="延迟时间（毫秒）">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/delayEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/delaySwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启用延迟" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="关键词过滤（逗号分隔）">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/keywordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/keywordSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启用关键词过滤" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="自动回复内容（逗号分隔随机发送）">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/replyEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/replySwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启用自动回复" />

</LinearLayout>
