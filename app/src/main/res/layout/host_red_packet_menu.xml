<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <Switch
        android:id="@+id/autoSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自动抢红包" />

    <Switch
        android:id="@+id/manualSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="手动抢红包（长按菜单）" />

    <Switch
        android:id="@+id/aggressiveSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="⚠激进模式（极限性能换速度）" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="激进模式：跳过检查、并行抢包、禁用无关服务"
        android:textColor="@color/host_text_secondary"
        android:textSize="12sp" />

    <Button
        android:id="@+id/whitelistGroupButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="白名单群组设置"
        android:textColor="@color/host_text_primary" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="平均金额过滤（分）"
        android:textColor="@color/host_text_primary"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/averageEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/edit_text"
        android:inputType="number"
        android:padding="10dp" />

    <Switch
        android:id="@+id/averageSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启用平均金额过滤" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="延迟时间（毫秒）"
        android:textColor="@color/host_text_primary"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/delayEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/edit_text"
        android:inputType="number"
        android:padding="10dp" />

    <Switch
        android:id="@+id/delaySwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启用延迟" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="关键字过滤（逗号分隔）"
        android:textColor="@color/host_text_primary"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/keywordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/edit_text"
        android:inputType="text"
        android:padding="10dp" />

    <Switch
        android:id="@+id/keywordSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启用关键字过滤" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="自动回复内容（逗号分隔随机发送）"
        android:textColor="@color/host_text_primary"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/replyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/edit_text"
        android:inputType="text"
        android:padding="10dp" />

    <Switch
        android:id="@+id/replySwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启用自动回复" />

</LinearLayout>
